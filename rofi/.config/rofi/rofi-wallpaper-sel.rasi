@import "~/.config/rofi/colors.rasi"

configuration {
    modi:                        "drun";
    show-icons:                  true;
    drun-display-format:         "{name}";    
    hover-select:                true;
    me-select-entry:             "";
    me-accept-entry:             "MousePrimary";
}

* {
    font:                        "Cascadia Nerd Font 13";
    background-color:            transparent;
    text-color:                  @on-surface;
    margin:                      0;
    padding:                     0;
    spacing:                     0;
}

window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       900px;
    background-color:            @on-primary;
    border:                      1px solid;
    border-color:                @outline;
    border-radius:               12px;
    padding:                     10px;
    cursor:                      "default";
}

mainbox {
    spacing:                     12px;
    children:                    [ "inputbar", "listview" ];
}

inputbar {
    spacing:                     12px;
    padding:                     12px 16px;
    background-color:            transparent;
    border:                      1px solid;
    border-color:                @outline;
    border-radius:               8px;
    children:                    [ "entry" ];
}

