entry {
    expand:                      true;
    padding:                     0px;
    background-color:            transparent;
    text-color:                  @on-surface;
    cursor:                      text;
    placeholder:                 "Search wallpapers...";
    placeholder-color:           @outline;
}

listview {
    columns:                     5;
    lines:                       1;
    spacing:                     12px;
    cycle:                       true;
    scrollbar:                   false;
    fixed-height:                true;
    fixed-columns:               true;
    cursor:                      "default";
    border:                      none;
}

element {
    border-radius:               8px;
    cursor:                      pointer;
    background-color:            transparent;
    border:                      1px solid;
    border-color:                @outline;
    padding:                     0px;
    spacing:                     0px;
}

element normal.normal {
    background-color: transparent;
    text-color: @on-surface;
}

element alternate.normal {
    background-color: transparent;
    text-color: @on-surface;
}

element selected.normal {
    background-color:            transparent;
    text-color:                  @on-primary-container;
    border-color:                @primary;
    border:                      2px solid;
}

element-icon {
    size:                        35%;
    cursor:                      inherit;
    border-radius:               8px 8px 0px 0px;
    background-color:            transparent;
}

